<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kalyan0510.root.iiticonnect.ProfileActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imgdp"
        android:background="#cccccc"
        android:soundEffectsEnabled="true"
        android:tag="chick to change"
        android:src="@mipmap/ic_launcher" />
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignBottom="@+id/imgdp"
            android:layout_alignEnd="@+id/imgdp"
            android:background="@mipmap/editw"
            android:textColor="#ffffff"
            android:id="@+id/editbutton" />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name here"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/usrnameTv"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="status"
            android:id="@+id/statusTv" />
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/edit"
            android:id="@+id/changestatus" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fname"
        android:id="@+id/fnameTv"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lname"
        android:id="@+id/lnameTv"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mailid"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/mailTv"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changepass"
        android:text="change password"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="alarmset"
        android:id="@+id/alarmset" />


</LinearLayout>
