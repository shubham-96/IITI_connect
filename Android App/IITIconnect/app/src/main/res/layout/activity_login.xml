<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kalyan0510.root.iiticonnect.LoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginuname"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="username"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="password"
        android:id="@+id/loginpwd"
        android:layout_below="@+id/loginuname"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/loginuname" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:background="#80ffffff"
        android:text="forgot password"
        android:textSize="10dp"
        android:id="@+id/forgotpa"
        android:layout_below="@+id/loginpwd"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:id="@+id/loginbutton"
        android:layout_below="@+id/forgotpa"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/logindet"
        android:padding="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/loginbutton"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:background="#80ffffff"
        android:text="sign up?"
        android:textSize="12dp"
        android:textAlignment="center"
        android:id="@+id/noacc"
        android:layout_below="@+id/loginbutton"
        android:layout_alignParentStart="true" />

</RelativeLayout>
